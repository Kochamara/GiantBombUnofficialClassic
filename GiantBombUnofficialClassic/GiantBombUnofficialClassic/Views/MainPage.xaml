<Page
    x:Class="GiantBombUnofficialClassic.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GiantBombUnofficialClassic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:Converters="using:GiantBombUnofficialClassic.Views.Converters">

    <Page.Resources>
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <Converters:NegatedBoolToVisibilityConverter x:Key="NegatedBoolToVisibility"/>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image Source="ms-appx:///Assets/jeff.jpg" Visibility="{Binding ShowJeff, Converter={StaticResource BoolToVisibility}}" />
        <MediaPlayerElement x:Name="MediaPlayer" AutoPlay="True" Source="{Binding VideoSource}" HorizontalAlignment="Stretch" Visibility="{Binding ShowJeff, Converter={StaticResource NegatedBoolToVisibility}}"/>
    </Grid>
</Page>
