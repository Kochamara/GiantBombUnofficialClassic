<Page
    x:Class="GiantBombUnofficialClassic.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GiantBombUnofficialClassic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:Converters="using:GiantBombUnofficialClassic.Views.Converters">

    <Page.Resources>
        <Converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <Converters:NegatedBoolToVisibilityConverter x:Key="NegatedBoolToVisibility"/>

        <DataTemplate x:Name="DataTemplate1">
            <Button Width="400" Height="340">
                <Grid>
                    <Image Stretch="UniformToFill" Opacity="30">
                        <Image.Source>
                            <BitmapImage UriSource="{Binding ImageLocation}" />
                        </Image.Source>
                    </Image>
                    <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Red" Opacity="0.5" />
                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center" MaxLines="3" FontSize="24" TextWrapping="WrapWholeWords" />
                </Grid>
            </Button>
        </DataTemplate>
    </Page.Resources>

    <ScrollViewer>
        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Image Source="ms-appx:///Assets/jeff.jpg" Visibility="{Binding ShowJeff, Converter={StaticResource BoolToVisibility}}" />

            <Grid x:Name="FunGrid" Visibility="{Binding ShowJeff, Converter={StaticResource NegatedBoolToVisibility}}">
                <!--<MediaPlayerElement x:Name="MediaPlayer" AutoPlay="True" Source="{Binding VideoSource}" HorizontalAlignment="Stretch" />-->

                <ItemsControl ItemsSource="{Binding Videos}" ItemTemplate="{StaticResource DataTemplate1}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid MaximumRowsOrColumns="3" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
